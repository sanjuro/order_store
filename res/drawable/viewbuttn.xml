<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true" > 
        <shape> 
            <gradient 
                android:startColor="#e8e8e8"
                android:centerColor="#f3f3f3"
                android:endColor = "#fdfdfd"
                android:angle = "270"/> 
                
            <corners
                android:radius="4dp"
                 />
            
            <stroke
                android:color="#beb8b8"
                android:width="1dp"
                 />
        </shape> 
    </item> 

    <item>         
        <shape>
             <gradient 
    	        android:angle="270"
    	        android:centerColor="#f3f3f3"
    	        android:endColor="#e8e8e8"
    	        android:startColor="#fdfdfd" 
       />
             
              <corners
                android:radius="4dp"
                 />
              
            <stroke
                android:color="#beb8b8"
                android:width="1dp"
                 />
    
         </shape> 
    </item> 
</selector> 
