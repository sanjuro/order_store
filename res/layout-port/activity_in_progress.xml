<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android1="http://schemas.android.com/apk/res/android"
              android1:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android1:layout_gravity="center_vertical|center_horizontal"
              android:orientation="vertical"
              android1:background="#ffffff"
              android1:padding="20dp">

    <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center_vertical"
            android1:orientation="vertical">

        <TextView
                android1:id="@+id/readyAreSure"
                android1:layout_width="fill_parent"
                android1:layout_height="fill_parent"
                android1:layout_gravity="center"
                android1:gravity="center"
                android1:text="@string/orderReady"
                android1:textAppearance="?android:attr/textAppearanceMedium"
                android1:textColor="#39393e"
                android1:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp" >


        <LinearLayout
                android:id="@+id/timeScrollerHolder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="15dp"
                >

            <EditText
                    android:id="@+id/timeToReady"
                    android:paddingTop="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="35"
                    android:textSize="16sp"
                    android:inputType="number" >
                <requestFocus />
            </EditText>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/posOrderNumnberHolder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/timeScrollerHolder"
                >

            <TextView
                    android:id="@+id/lblPosOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:text="POS Order Number(Optional)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

            <EditText
                    android:id="@+id/posOrderNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="MOVE TO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            >

        <Button
                android:id="@+id/confMoveProg"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#f67846"
                android:drawableLeft="@drawable/iconprogwhite"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="IN PROGRESS"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="inProgressPressed"
                android:clickable="true"
                android:textStyle="bold" />

        <Button
                android:id="@+id/confCancel"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cancelbutt"
                android:drawableLeft="@drawable/iconcancelgrey"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                android:text="CANCEL "
                android:textColor="#8c8c8c"
                android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
